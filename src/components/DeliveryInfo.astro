---
// Delivery information section
import { Truck, RotateCcw, Shield } from 'lucide-astro';
---

<section class="delivery-info">
  <div class="container">
    <div class="delivery-grid">
      <div class="delivery-item">
        <div class="delivery-icon">
          <Truck size={40} />
        </div>
        <h3 class="delivery-title">Free Worldwide Shipping</h3>
        <p class="delivery-description">on every shipping 24 for all jewelry</p>
      </div>
      
      <div class="delivery-item">
        <div class="delivery-icon">
          <RotateCcw size={40} />
        </div>
        <h3 class="delivery-title">Free 30 Days Returns</h3>
        <p class="delivery-description">all free returns within 30 days for all</p>
      </div>
      
      <div class="delivery-item">
        <div class="delivery-icon">
          <Shield size={40} />
        </div>
        <h3 class="delivery-title">100% Packaging</h3>
        <p class="delivery-description">Elegant presentation with our luxe packaging and international</p>
      </div>
    </div>
  </div>
</section>

<style>
  @import "/src/styles/delivery-info.css";
</style>
