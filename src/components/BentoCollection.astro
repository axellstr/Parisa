---
// Clean bento layout for collection showcase

// Use direct paths to public images (required for Vercel deployment)
const bendoOneImage = '/images/bendo-one.jpg';
const bendoTwoImage = '/images/bendo-two.jpg';
const bendoThreeImage = '/images/bendo-three.jpg';
const bendoFourImage = '/images/bendo-four.jpg';

const bentoImages = {
  1: bendoOneImage,
  2: bendoTwoImage,
  3: bendoThreeImage, 
  4: bendoFourImage
};
---

<section class="bento-collection">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Persian Turquoise Collection</h2>
    </div>
    
    <div class="bento-grid">
      <!-- Main large item -->
      <div class="bento-item bento-item-1">
        <img 
          src={bentoImages[1]} 
          alt="Handcrafted Heritage Collection" 
          class="bento-image"
          loading="lazy"
          width="600"
          height="800"
        />
        <div class="bento-overlay"></div>
        <div class="bento-content">
          <h3 class="bento-title">Handcrafted Heritage</h3>
          <p class="bento-subtitle">Discover our finest collection</p>
        </div>
      </div>
      
      <!-- Bottom left item -->
      <div class="bento-item bento-item-2">
        <img 
          src={bentoImages[2]} 
          alt="Artisan Craft Collection" 
          class="bento-image"
          loading="lazy"
          width="400"
          height="300"
        />
        <div class="bento-overlay"></div>
        <div class="bento-content">
          <h3 class="bento-title">Artisan Craft</h3>
          <p class="bento-subtitle">Traditional techniques</p>
        </div>
      </div>
      
      <!-- Top right item -->
      <div class="bento-item bento-item-3">
        <img 
          src={bentoImages[3]} 
          alt="Timeless Beauty Collection" 
          class="bento-image"
          loading="lazy"
          width="600"
          height="250"
        />
        <div class="bento-overlay"></div>
        <div class="bento-content">
          <h3 class="bento-title">Timeless Beauty</h3>
          <p class="bento-subtitle">Elegant designs</p>
        </div>
      </div>
      
      <!-- Bottom right item -->
      <div class="bento-item bento-item-4">
        <img 
          src={bentoImages[4]} 
          alt="Persian Legacy Collection" 
          class="bento-image"
          loading="lazy"
          width="600"
          height="750"
        />
        <div class="bento-overlay"></div>
        <div class="bento-content">
          <h3 class="bento-title">Persian Legacy</h3>
          <p class="bento-subtitle">Cultural treasures</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @import "/src/styles/bento-collection.css";
</style>