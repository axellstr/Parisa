---
// Hero section with full-width image and overlaid text
---

<section class="hero">
  <div class="hero-image-container">
    <img 
      src="/images/hero.jpg" 
      alt="Elegant Persian turquoise necklace with gold chain"
      loading="eager"
      class="hero-bg-image"
    />
    <div class="hero-overlay"></div>
  </div>
  
  <div class="hero-content">
    <div class="hero-text">
      <div class="season-tag">FALL 2025</div>
      <h1 class="hero-title">
        MAISON ÉLÉGANT<span class="separator">•</span>LONDON<span class="separator">•</span>NEW YORK
      </h1>
      <p class="hero-subtitle">THE ART OF EXCEPTIONAL CRAFTSMANSHIP</p>
      
      <div class="hero-actions">
        <a href="/collections" class="btn">View Collection</a>
        <a href="/catalog" class="btn btn-secondary">Browse Catalogue</a>
      </div>
    </div>
  </div>
</section>

<style>
  @import "/src/styles/hero.css";
</style>
