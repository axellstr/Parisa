      <h2 class="section-title">Featured Collection</h2>
    </div>
    
    <div class="collection-grid">
      <div class="collection-item">
        <div class="item-image">
          <img src="/images/display.jpg" alt="Persian Turquoise Necklace" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Necklace <span class="arrow">→</span></h3>
        </div>
      </div>
      
      <div class="collection-item">
        <div class="item-image">
          <img src="/images/display.jpg" alt="Persian Turquoise Bracelet" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Bracelet <span class="arrow">→</span></h3>
        </div>
      </div>
      
      <div class="collection-item">
        <div class="item-image">
          <img src="/images/display.jpg" alt="Persian Turquoise Earrings" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Earrings <span class="arrow">→</span></h3>
        </div>
      </div>
      
      <div class="collection-item">
        <div class="item-image">
          <img src="/images/display.jpg" alt="Persian Turquoise Ring" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Ring <span class="arrow">→</span></h3>
