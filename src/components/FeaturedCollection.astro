---
// Featured collection section with 4 product items
import { ArrowRight } from 'lucide-astro';

// Use direct path to public image (required for Vercel deployment)
const displayImage = '/images/display.jpg';
---

<section class="featured-collection">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Featured Collection</h2>
    </div>
    
    <div class="collection-grid">
      <div class="collection-item">
        <div class="item-image">
          <img src={displayImage} alt="Persian Turquoise Necklace" width="400" height="533" loading="lazy" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Necklace <ArrowRight size={16} class="arrow" /></h3>
        </div>
      </div>
      
      <div class="collection-item">
        <div class="item-image">
          <img src={displayImage} alt="Persian Turquoise Bracelet" width="400" height="533" loading="lazy" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Bracelet <ArrowRight size={16} class="arrow" /></h3>
        </div>
      </div>
      
      <div class="collection-item">
        <div class="item-image">
          <img src={displayImage} alt="Persian Turquoise Earrings" width="400" height="533" loading="lazy" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Earrings <ArrowRight size={16} class="arrow" /></h3>
        </div>
      </div>
      
      <div class="collection-item">
        <div class="item-image">
          <img src={displayImage} alt="Persian Turquoise Ring" width="400" height="533" loading="lazy" />
        </div>
        <div class="item-info">
          <h3 class="item-name">Turquoise Ring <ArrowRight size={16} class="arrow" /></h3>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @import "/src/styles/featured-collection.css";
</style>
