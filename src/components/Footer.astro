---
// Professional footer component
import { Image } from 'astro:assets';
import { Instagram, Facebook, Twitter, Youtube, ExternalLink } from 'lucide-astro';

// Import logo for optimization
import logoLight from '../../public/images/Logo_light.svg';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Brand Section -->
      <div class="footer-section brand-section">
        <a href="/" class="footer-logo">
          <Image src={logoLight} alt="Parisa London" class="footer-logo-image" width={120} height={40} loading="lazy" />
        </a>
        <p class="footer-description">
          Luxury fine jewellery featuring handcrafted 18K gold pieces with rare Persian turquoise and gemstones.
        </p>
        <div class="social-links">
          <a href="#" aria-label="Instagram">
            <Instagram size={20} />
          </a>
          <a href="#" aria-label="Facebook">
            <Facebook size={20} />
          </a>
          <a href="#" aria-label="Twitter">
            <Twitter size={20} />
          </a>
          <a href="#" aria-label="Pinterest">
            <ExternalLink size={20} />
          </a>
          <a href="#" aria-label="YouTube">
            <Youtube size={20} />
          </a>
        </div>
      </div>
      
      <!-- Navigation Links -->
      <div class="footer-section">
        <h4 class="footer-title">Navigation</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/collections">Collections</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>
      
      <!-- Support Links -->
      <div class="footer-section">
        <h4 class="footer-title">Support</h4>
        <ul class="footer-links">
          <li><a href="/help">Help Center</a></li>
          <li><a href="/shipping">Shipping Info</a></li>
          <li><a href="/returns">Returns</a></li>
          <li><a href="/size-guide">Size Guide</a></li>
          <li><a href="/care">Jewelry Care</a></li>
        </ul>
      </div>
      
      <!-- Company Links -->
      <div class="footer-section">
        <h4 class="footer-title">Company</h4>
        <ul class="footer-links">
          <li><a href="/about">About Parisa</a></li>
          <li><a href="/careers">Careers</a></li>
          <li><a href="/press">Press</a></li>
          <li><a href="/sustainability">Sustainability</a></li>
          <li><a href="/wholesale">Wholesale</a></li>
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div class="footer-section">
        <h4 class="footer-title">Legal</h4>
        <ul class="footer-links">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms of Service</a></li>
          <li><a href="/cookies">Cookie Policy</a></li>
          <li><a href="/accessibility">Accessibility</a></li>
          <li><a href="/sitemap">Sitemap</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div></div>
      <p class="copyright">Â© {currentYear} Parisa London. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  @import "/src/styles/footer.css";
</style>
