---
// Professional footer component
import { Instagram, Facebook, Twitter, Youtube, ExternalLink } from 'lucide-astro';

// Use direct path to public logo (required for Vercel deployment)
const logoLight = '/images/Logo_light.svg';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Brand Section -->
      <div class="footer-section brand-section">
        <a href="/" class="footer-logo">
          <img src={logoLight} alt="Parisa London" class="footer-logo-image" width="120" height="40" loading="lazy" />
        </a>
        <p class="footer-description">
          Luxury fine jewellery featuring handcrafted 18K gold pieces with rare Persian turquoise and gemstones.
        </p>
        <div class="social-links">
          <a href="#" aria-label="Instagram">
            <Instagram size={20} />
          </a>
          <a href="#" aria-label="Facebook">
            <Facebook size={20} />
          </a>
          <a href="#" aria-label="Twitter">
            <Twitter size={20} />
          </a>
          <a href="#" aria-label="Pinterest">
            <ExternalLink size={20} />
          </a>
          <a href="#" aria-label="YouTube">
            <Youtube size={20} />
          </a>
        </div>
      </div>
      
      <!-- Navigation Links -->
      <div class="footer-section">
        <h4 class="footer-title">Navigation</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="#">Collections</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">Blog</a></li>
        </ul>
      </div>
      
      <!-- Support Links -->
      <div class="footer-section">
        <h4 class="footer-title">Support</h4>
        <ul class="footer-links">
          <li><a href="#">Help Center</a></li>
          <li><a href="#">Shipping Info</a></li>
          <li><a href="#">Returns</a></li>
          <li><a href="#">Size Guide</a></li>
          <li><a href="#">Jewelry Care</a></li>
        </ul>
      </div>
      
      <!-- Company Links -->
      <div class="footer-section">
        <h4 class="footer-title">Company</h4>
        <ul class="footer-links">
          <li><a href="#">About Parisa</a></li>
          <li><a href="#">Careers</a></li>
          <li><a href="#">Press</a></li>
          <li><a href="#">Sustainability</a></li>
          <li><a href="#">Wholesale</a></li>
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div class="footer-section">
        <h4 class="footer-title">Legal</h4>
        <ul class="footer-links">
          <li><a href="#">Privacy Policy</a></li>
          <li><a href="#">Terms of Service</a></li>
          <li><a href="#">Cookie Policy</a></li>
          <li><a href="#">Accessibility</a></li>
          <li><a href="#">Sitemap</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div></div>
      <p class="copyright">Â© {currentYear} Parisa London. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  @import "/src/styles/footer.css";
</style>
